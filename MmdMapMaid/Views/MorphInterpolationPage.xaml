<Page
    x:Class="MmdMapMaid.Views.MorphInterpolationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="using:MmdMapMaid.Controls" xmlns:helpers="using:MmdMapMaid.Helpers"
    mc:Ignorable="d">

    <Page.Resources>
        <helpers:DoubleToIntConverter x:Key="DoubleToIntConverter" />
    </Page.Resources>

    <Grid x:Name="ContentArea">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <controls:EditableBezierCurve Size="{x:Bind Size.Value, Mode=TwoWay}" EarlierControlPoint="{x:Bind ViewModel.EarlierPoint, Mode=TwoWay}" LaterControlPoint="{x:Bind ViewModel.LaterPoint, Mode=TwoWay}" Origin="BottomLeft" XDivisions="{x:Bind XStep.Value, Mode=TwoWay, Converter={StaticResource DoubleToIntConverter}}" ApproximationAccuracy="{x:Bind Accuracy.Value, Mode=TwoWay}"/>
        <StackPanel Grid.Column="1">
            <NumberBox x:Name="Size" Value="1000"/>
            <TextBlock Text="{x:Bind ViewModel.EarlierPoint, Mode=TwoWay}"/>
            <TextBlock Text="{x:Bind ViewModel.LaterPoint, Mode=TwoWay}"/>
            <Slider x:Name="XStep" Minimum="2" Maximum="20" Value="10" StepFrequency="1" />
            <Slider x:Name="Accuracy" Minimum="0" Maximum="1" Value="0.05" StepFrequency="0.001" />
        </StackPanel>
    </Grid>
</Page>
