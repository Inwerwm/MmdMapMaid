<Page
    x:Name="PmmPageRoot"
    x:Class="MmdMapMaid.Views.PmmPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:conv="using:CommunityToolkit.WinUI.UI.Converters"
    xmlns:observables="using:MmdMapMaid.Observables"
    mc:Ignorable="d">

    <Page.Resources>
        <conv:BoolToVisibilityConverter x:Key="boolToVisibility" />
    </Page.Resources>

    <ScrollViewer x:Name="ContentArea">
        <StackPanel>
            <Grid ColumnSpacing="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button x:Uid="Pmm_ReadPmmButton" Command="{x:Bind ViewModel.ReplacerData.ReadPmmCommand}" HorizontalAlignment="Stretch" Grid.Column="0" />
                <Button x:Uid="Pmm_WritePmmButton" Command="{x:Bind ViewModel.ReplacerData.WritePmmCommand}" HorizontalAlignment="Stretch" Grid.Column="1" />
            </Grid>
            <InfoBar x:Uid="Pmm_WriteInfoBar" Severity="{x:Bind ViewModel.ReplacerData.WritePmmInfoSeverty, Mode=OneWay}" Message="{x:Bind ViewModel.ReplacerData.PmmWriteInfobarMessage, Mode=OneWay}" IsOpen="{x:Bind ViewModel.ReplacerData.OpenCompleteMessage, Mode=TwoWay}" />
            <ListView ItemsSource="{x:Bind ViewModel.ReplacerData.ModelInfo}" SelectionMode="None" >
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="observables:PmmModelInformation">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="5*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock x:Name="PmmModelInfoIndex" Text="{x:Bind Index}" VerticalAlignment="Center" Grid.Column="0" />
                            <TextBlock Text="{x:Bind Name}" VerticalAlignment="Center" Grid.Column="1" />
                            <Button Command="{Binding RestorePathCommand}" IsEnabled="{x:Bind IsEdited, Mode=OneWay}" Grid.Column="2" >
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe777;"/>
                            </Button>
                            <TextBox Text="{x:Bind Path, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Center" Grid.Column="3" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </ScrollViewer>
</Page>
