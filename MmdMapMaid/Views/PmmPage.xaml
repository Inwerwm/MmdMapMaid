<Page
    x:Class="MmdMapMaid.Views.PmmPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:conv="using:CommunityToolkit.WinUI.UI.Converters"
    xmlns:observables="using:MmdMapMaid.Observables"
    mc:Ignorable="d">
    
    <Page.Resources>
        <conv:BoolToVisibilityConverter x:Key="boolToVisibility" />
    </Page.Resources>
    
    <ScrollViewer x:Name="ContentArea">
        <StackPanel>
            <Grid ColumnSpacing="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button x:Uid="Pmm_ReadPmmButton" Command="{x:Bind ViewModel.ReadPmmCommand}" HorizontalAlignment="Stretch" Grid.Column="0" />
                <Button x:Uid="Pmm_WritePmmButton" Command="{x:Bind ViewModel.WritePmmCommand}" HorizontalAlignment="Stretch" Grid.Column="1" />
            </Grid>
            <InfoBar x:Uid="Pmm_WriteInfoBar" Severity="{x:Bind ViewModel.WritePmmInfoSeverty, Mode=OneWay}" Message="{x:Bind ViewModel.PmmWriteInfobarMessage, Mode=OneWay}" IsOpen="{x:Bind ViewModel.OpenCompleteMessage, Mode=TwoWay}" />
            <ListView ItemsSource="{x:Bind ViewModel.ModelInfo}" SelectionMode="Single" >
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="observables:PmmModelInformation">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{x:Bind Index}" VerticalAlignment="Center" Grid.Column="0" />
                            <TextBlock Text="{x:Bind Name}" VerticalAlignment="Center" Grid.Column="1" />
                            <TextBox Text="{x:Bind Path, Mode=TwoWay}" VerticalAlignment="Center" Grid.Column="2" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </ScrollViewer>
</Page>
